#include <iostream>
#include <string>

int main() {
    char input;
    for (int i = 0; i < 5; ++i) {
        std::cout << "Enter character " << i + 1 << " (or 'n' to exit): ";
        std::cin >> input;

        if (input == 'n') {
            std::cout << "Loop exited early." << std::endl;
            break; 
        } else {
            std::cout << "You entered: " << input << std::endl;
        }
    }
    return 0;
}
